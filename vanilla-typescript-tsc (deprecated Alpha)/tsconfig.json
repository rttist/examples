		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"experimentalDecorators": true,
        "strict": true,
        "strictNullChecks": true,
        "sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"plugins": [
			{
				"transform": "tst-reflect-transformer"
			}
		]
	}
}